extends ../layouts/default

block meta
	title Вакансии

block content
	+MainScreen({ home: false })
		block mainScreenTitle
			h1(class=`numbered-lines__descr main-screen__title section-title wow`)
				pre.section-title__typing.pre-text(id='typed-title-1').
					#[span.section-title__selected-words #[span Вакансии]]

		block mainScreenDescription
			pre.numbered-lines__descr.animate-line-text.animate-line-text--hide.wow.
				&lt;--находимся в перманентно-голодном состоянии
				до качественных кадров--&gt;
	+Vacancy()
	+Apply()
		block title
			h2(class=`numbered-lines__descr section-title wow`)
				pre.pre-text.
					#[span.section-title__selected-words #[span Хотите к нам?]]
					Напишите
		block form
			+MainForm({
				arrayFields: [
					{
						required: true,
						name: 'position',
						label: 'желаемая должность',
						id: 'position-user',
						errorText: 'введите желаемую должность',
						successText: 'желаемая должность'
					},
					{
						required: true,
						name: 'name',
						label: 'введите имя',
						id: 'name-user'
					},
					{
						required: true,
						name: 'phone',
						label: 'введите телефон',
						id: 'phone-user'
					},
					{
						required: true,
						name: 'email',
						label: 'введите email',
						id: 'email-user'
					},
					{
						required: true,
						name: 'message',
						label: 'расскажите о себе',
						id: 'message-user',
						textarea: true,
						errorText: 'расскажите о себе',
						successText: 'спасибо, что рассказали о себе!'
					}
				],
				filesBlockID: 'apply-files-block',
				className: 'apply__main-form'
			})
